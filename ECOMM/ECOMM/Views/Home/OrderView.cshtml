
@{
    ViewBag.Title = "OrderView";
}



@model IEnumerable<BLL.Details.Order>
@using BLL.Details


@if (Model != null)
{
    <div class="grid">
        <table cellspacing="0" width="80%">
            <thead>
                <tr><th>quantity</th> <th>price</th>  </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td align="left">  @item.quantity </td>
                        <td align="left">  @item.price </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
}